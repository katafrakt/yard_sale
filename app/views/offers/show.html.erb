<div class="container mx-auto w-full flex items-start mt-24">
  <div class="flex w-full md:w-2/3 md:ml-6">
    <img class="hover:shadow-lg mx-auto" src="<%= @offer.image_url %>">
  </div>
  <div class="flex w-full flex-wrap md:w-1/3">
    <h1 class="text-3xl font-bold w-full"><%= @offer.name %></h1>
    <div class="w-full flex-wrap">
      <p class="w-full md:w-1/2 text-2xl font-semibold pt-3"><%= @offer.price %>â‚¬</p>
      <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded uppercase last:mr-0 mr-1 <%= availability_classes(@offer) %>">
        <%= availability_label(@offer) %>
      </span>
    </div>
    <section class="mt-6 w-full">
      <%= simple_format @offer.description %>
    </section>

    <div class="mt-12 mb-12 w-full"><hr></div>

    <section class="w-full text-xs text-gray-600">
      <p class="font-semibold mb-3">Sale description:</p>

      <%= simple_format @sale.description %>
    </section>

    <section class="w-full mt-8">
      <%= link_to raw("&laquo; Go back to sale"), sale_path(@sale.id) %>
    </section>
  </div>
</div>