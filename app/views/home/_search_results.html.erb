<%= turbo_frame_tag "offers" do %>
  <section class="bg-white py-8">
    <div class="container mx-auto flex items-end flex-wrap pt-4 pb-12">
    <% if @offers.present? %>
      <% offers.each do |offer| %>
        <%= render "offer", offer: offer %>
      <% end %>
    <% end %>
    </div>
  </section>
<% end %>