<%= form_with url: admin_sales_path, method: :post do |f| %>
  <div class="flex flex-wrap mt-6">
    <div class="w-full lg:w-12/12 px-4">
      <%= f.label "Name", class: "block uppercase text-blueGray-600 text-xs font-bold mb-2" %>
      <%= f.text_field "sale[name]", class: "border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" %>
    </div>
  </div>
  <div class="flex flex-wrap mt-6">
    <div class="w-full lg:w-12/12 px-4">
      <%= f.label "Description", class: "block uppercase text-blueGray-600 text-xs font-bold mb-2" %>
      <%= f.text_area "sale[description]", class: "border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" %>
    </div>
  </div>
  <div class="flex flex-wrap mt-6">
    <div class="w-full lg:w-12/12 px-4">
      <%= f.submit "Create", class: "btn-primary" %>
    </div>
  </div>
<% end %>